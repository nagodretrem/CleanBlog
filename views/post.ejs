<%- include('partials/_header') -%>

<body>

  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <span class="meta">Posted by
              <a href="#">Mert Erdoğan</a>
              on <%= post.dateCreated.toDateString(); %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p><%= post.detail %></p>
          <p class="post-meta">Posted by
            <a href="#">Mert Erdoğan</a>
            on <%= post.dateCreated.toDateString(); %></p>
          <div class="row mb-1 pb-4">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="text-center">
                <a href="/posts/edit/<%= post._id %>" class="btn btn-primary mb-4"><span>Update Post</span></a>	
              </div>	
              <div class="text-center">
                <a href="/posts/<%= post._id %>?_method=DELETE" class="btn btn-danger" onclick="return confirm('Are you sure delete this post?')"><span>Delete Post</span></a>	
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </article>




  <hr>

  <%- include('partials/_footer') -%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
